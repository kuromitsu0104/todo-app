<div data-controller="tasks--index--task-list-card--component">
  <div class="flex flex-col">
    <div class="-m-1.5 overflow-x-auto">
      <div class="p-1.5 min-w-full inline-block align-middle">
        <div class="border rounded-lg overflow-hidden">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500">タイトル</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500">詳細</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500">締切日</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500">優先度</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @tasks.each do |task| %>
                <tr>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800"><%= task.title %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= task.summary %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= task.decorate.readable_due_date %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium"><%= task.decorate.readable_priority %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
